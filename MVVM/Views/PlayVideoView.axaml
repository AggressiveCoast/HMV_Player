<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:HMV_Player.MVVM.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             xmlns:vlc="clr-namespace:LibVLCSharp.Avalonia;assembly=LibVLCSharp.Avalonia"
             x:Class="HMV_Player.MVVM.Views.PlayVideoView"
             x:DataType="vm:PlayVideoViewModel">
    <Grid RowDefinitions="*, 40">
        <Grid Grid.Row="0">
            <vlc:VideoView x:Name="VideoViewElement"></vlc:VideoView>
            <Button x:Name="ExitFullscreenButton"
                    Content="Exit Fullscreen"
                    Width="140"
                    Height="40"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Margin="10" />
        </Grid>
        <DockPanel Grid.Row="1" HorizontalAlignment="Stretch">
            <Button DockPanel.Dock="Left" CornerRadius="10" Command="{Binding PauseToggleVideo}">
                <Panel>
                    <Label Classes="icon" Margin="0, -1, 0, 0" Content="&#xE39E;" IsVisible="{Binding !IsPaused}"></Label>
                    <Label Classes="icon" Margin="0, -1, 0, 0" Content="&#xE3D0;" IsVisible="{Binding IsPaused}"></Label>
                </Panel>
            </Button>
            <Button DockPanel.Dock="Left" Margin="0, -2, 0, 0" Content="Load Media" Command="{Binding LoadMedia}" />
            <TextBlock DockPanel.Dock="Left" VerticalAlignment="Center" Width="60" Text="{Binding SliderTimeText}"></TextBlock>
            <Button DockPanel.Dock="Right" CornerRadius="10" Command="{Binding ToggleFullScreen}">
                <Panel>
                    <Label Classes="icon" Margin="0, -1, 0, 0" Content="&#xE1D0;"></Label>
                </Panel>
            </Button>
            <Slider x:Name="TimeSlider" ValueChanged="TimeSlider_OnValueChanged" Minimum="0" Maximum="1"
                    Value="{Binding SliderTimeValue}" Margin="5,-4,0,0">
            </Slider>
        </DockPanel>
    </Grid>

</UserControl>