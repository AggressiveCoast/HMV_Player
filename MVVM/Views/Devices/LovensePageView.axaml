<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:devices="clr-namespace:HMV_Player.MVVM.ViewModels.Devices"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="HMV_Player.MVVM.Views.Devices.LovensePageView"
             x:DataType="devices:LovensePageViewModel">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label HorizontalAlignment="Left" VerticalAlignment="Center">Lovense Toys Connected</Label>
                <Button Grid.Column="1" HorizontalAlignment="Right" CornerRadius="10"
                        Command="{Binding RefreshLovenseToysListCommand}">
                    <Label Classes="icon" Margin="0, -1, 0, 0" Content="&#xE096;"></Label>
                </Button>
            </StackPanel>
            <TextBlock Text="{Binding NoAvailableToysMessage}" IsVisible="{Binding IsToysListEmpty}"></TextBlock>
            <ListBox IsVisible="{Binding !IsToysListEmpty}" ItemsSource="{Binding ToyDataList}"
                     SelectedItem="{Binding CurrentSelectedLovenseToy}"
                     SelectedIndex="0">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border CornerRadius="10"
                                Padding="8">
                            <DockPanel>
                                <TextBlock VerticalAlignment="Center" Text="{Binding}" />
                                <BatteryIndicator
                                    Margin="5"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Top"
                                    BatteryLevel="{Binding Battery}"
                                    Width="30"
                                    Height="30" />
                            </DockPanel>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <!-- toy specific things -->
            <StackPanel Orientation="Vertical" IsVisible="{Binding !IsToysListEmpty}">
                <TextBlock FontSize="30" Text="User Settings"/>
                <ToggleSwitch  OnContent="Enabled" OffContent="Disabled" IsChecked="{Binding IsToyScriptEnabled}" />
                <Button Content="Test Device" Command="{Binding TestDeviceCommand}"/>
                <TextBlock FontSize="20" Text="Device Properties" />
            </StackPanel>
        </StackPanel>
    </ScrollViewer>

    <UserControl.Styles>
        <Style Selector="ListBox">
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Background" Value="Transparent"></Setter>
        </Style>
        <Style Selector="ListBoxItem">
            <Setter Property="Background" Value="Transparent" />
        </Style>
        <Style Selector="ListBoxItem:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="Transparent" />
        </Style>
        <Style Selector="ListBoxItem:selected /template/ ContentPresenter">
            <Setter Property="Background" Value="Transparent" />
        </Style>
        <Style Selector="ListBoxItem:selected:focus /template/ ContentPresenter">
            <Setter Property="Background" Value="Transparent" />
        </Style>
        <Style Selector="ListBoxItem:selected:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="Transparent" />
        </Style>

        <Style Selector="ListBoxItem:selected Border">
            <Setter Property="Background" Value="Aqua"></Setter>
        </Style>
        <Style Selector="ListBoxItem:pointerover Border">
            <Setter Property="Background" Value="MediumVioletRed"></Setter>
        </Style>
        <Style Selector="ListBoxItem:pressed">
            <Setter Property="RenderTransform" Value="scale(0.95)" />
        </Style>
        <Style Selector="ListBoxItem Border">
            <Setter Property="Background" Value="HotPink" />
        </Style>
    </UserControl.Styles>
</UserControl>