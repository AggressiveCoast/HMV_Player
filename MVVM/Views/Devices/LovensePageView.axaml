<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:devices="clr-namespace:HMV_Player.MVVM.ViewModels.Devices"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="HMV_Player.MVVM.Views.Devices.LovensePageView"
             x:DataType="devices:LovensePageViewModel">
    <Grid ColumnDefinitions="*, *">
        <Grid Grid.Column="0" Background="{StaticResource LovenseDevicesPaneBackground}">
            <StackPanel Grid.Column="0" Margin="5, 0, 0, 0">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                    <Label HorizontalAlignment="Left" VerticalAlignment="Center">Lovense Toys Connected</Label>
                    <Button HorizontalAlignment="Right" CornerRadius="10"
                            Command="{Binding RefreshLovenseToysListCommand}">
                        <Label Classes="icon" Margin="0, -1, 0, 0" Content="&#xE096;"></Label>
                    </Button>
                </StackPanel>
                <TextBlock Text="{Binding NoAvailableToysMessage}" IsVisible="{Binding IsToysListEmpty}"></TextBlock>
                <ListBox IsVisible="{Binding !IsToysListEmpty}" ItemsSource="{Binding ToyDataList}"
                         SelectedItem="{Binding CurrentSelectedLovenseToy}"
                         SelectedIndex="0">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border CornerRadius="10"
                                    Padding="8">
                                <DockPanel>
                                    <TextBlock VerticalAlignment="Center" Text="{Binding RawData.Name}" />
                                    <BatteryIndicator
                                        Margin="5"
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Top"
                                        BatteryLevel="{Binding RawData.Battery }"
                                        Width="30"
                                        Height="30" />
                                </DockPanel>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </StackPanel>
        </Grid>


        <!-- toy specific things -->
        <StackPanel Margin="10, 0" Grid.Column="1" Orientation="Vertical" IsVisible="{Binding !IsToysListEmpty}"
                    HorizontalAlignment="Left">
            <TextBlock Margin="0, 5" FontSize="30" Text="{Binding CurrentSelectedLovenseToy.RawData.Name}"></TextBlock>
            <TextBlock FontSize="20" Text="User Settings" />
            <ToggleSwitch OnContent="Enabled" OffContent="Disabled" IsChecked="{Binding IsToyScriptEnabled}" />
            <StackPanel Orientation="Horizontal">
                <Label Content="Script Channel">
                </Label>
                <ComboBox Name="ScriptChannelComboBox" ItemsSource="{Binding ComboBoxPossibleOptions}"
                          SelectedItem="{Binding SelectedChannelComboBoxValue}"
                          SelectionChanged="ComboBoxScriptChannel_OnSelectionChanged">

                </ComboBox>
            </StackPanel>

            <Button Margin="0, 5" Content="Test Device" Command="{Binding TestDeviceCommand}" />
            <TextBlock Margin="0, 10" FontSize="20" Text="Device Properties" />
            <StackPanel Orientation="Vertical">
                <TextBlock Text="{Binding DeviceIdText}"></TextBlock>
                <TextBlock Text="{Binding DeviceBatteryText}"></TextBlock>
                <TextBlock Text="{Binding DeviceNickNameText}"></TextBlock>
                <TextBlock Text="{Binding DeviceFunctionNamesText}"></TextBlock>


            </StackPanel>
        </StackPanel>
    </Grid>

    <UserControl.Styles>
        <Style Selector="ListBox">
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Background" Value="Transparent"></Setter>
        </Style>
        <Style Selector="ListBoxItem">
            <Setter Property="Background" Value="Transparent" />
        </Style>
        <Style Selector="ListBoxItem:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="Transparent" />
        </Style>
        <Style Selector="ListBoxItem:selected /template/ ContentPresenter">
            <Setter Property="Background" Value="Transparent" />
        </Style>
        <Style Selector="ListBoxItem:selected:focus /template/ ContentPresenter">
            <Setter Property="Background" Value="Transparent" />
        </Style>
        <Style Selector="ListBoxItem:selected:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="Transparent" />
        </Style>

        <Style Selector="ListBoxItem:selected Border">
            <Setter Property="Background" Value="Aqua"></Setter>
        </Style>
        <Style Selector="ListBoxItem:pointerover Border">
            <Setter Property="Background" Value="DodgerBlue"></Setter>
        </Style>
        <Style Selector="ListBoxItem:pressed">
            <Setter Property="RenderTransform" Value="scale(0.95)" />
        </Style>
        <Style Selector="ListBoxItem Border">
            <Setter Property="Background" Value="WhiteSmoke" />
        </Style>
    </UserControl.Styles>

    <UserControl.Resources>
        <LinearGradientBrush x:Key="LovenseDevicesPaneBackground" StartPoint="0%, 0%" EndPoint="100%, 0%">
            <GradientStop Offset="0" Color="HotPink"></GradientStop>
            <GradientStop Offset="1" Color="#34495e"></GradientStop>
        </LinearGradientBrush>
    </UserControl.Resources>
</UserControl>