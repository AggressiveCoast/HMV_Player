<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="using:HMV_Player.Controls"
             xmlns:vm="using:HMV_Player.MVVM.ViewModels"
             x:Class="HMV_Player.MVVM.Views.NotificationContainerView"
             x:DataType="vm:NotificationContainerViewModel">
    
    <Panel>
        <Popup IsOpen="True"
               PlacementMode="AnchorAndGravity"
               PlacementAnchor="TopRight"
               PlacementGravity="BottomLeft"
               PlacementTarget="{Binding $parent[Panel]}"
               IsLightDismissEnabled="False"
               HorizontalOffset="-20"
               VerticalOffset="20">
            <controls:NotificationPopup DataContext="{Binding}" />
        </Popup>
    </Panel>
    
</UserControl>