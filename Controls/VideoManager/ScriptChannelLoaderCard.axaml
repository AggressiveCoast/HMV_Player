<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:videoManager="clr-namespace:HMV_Player.Controls.VideoManager"
             mc:Ignorable="d" d:DesignWidth="300" d:DesignHeight="70"
             x:Class="HMV_Player.Controls.VideoManager.ScriptChannelLoaderCard">
    <Design.PreviewWith>
        <videoManager:ScriptChannelLoaderCard 
            Width="320"
            Height="240" />
    </Design.PreviewWith>
    <Grid>
        <Border CornerRadius="8"
                Background="SlateGray"
                Padding="12"
                BorderBrush="#3A3A3A"
                BorderThickness="1"
                Name="PART_Border">
            <Grid ColumnDefinitions="*, Auto, Auto">
                <StackPanel Grid.Column="0" Orientation="Vertical" ToolTip.Tip="{Binding FilePath,RelativeSource={RelativeSource AncestorType=videoManager:ScriptChannelLoaderCard}}">
                    <TextBlock VerticalAlignment="Center" Foreground="White">
                        <TextBlock>
                            <Run Text="Script Channel " />
                            <Run Text="{Binding Path=ChannelIndex, RelativeSource={RelativeSource AncestorType=videoManager:ScriptChannelLoaderCard}}" />
                            <Run Text=":" />
                            <Run Text="{Binding Path=FileStatusText, RelativeSource={RelativeSource AncestorType=videoManager:ScriptChannelLoaderCard}}" Foreground="{Binding FileStatusColor, RelativeSource={RelativeSource AncestorType=videoManager:ScriptChannelLoaderCard}}"/>
                        </TextBlock>
                    </TextBlock>
                    <TextBlock
                        Text="{Binding FileName,RelativeSource={RelativeSource AncestorType=videoManager:ScriptChannelLoaderCard}}">
                    </TextBlock>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                    <IconButton
                        Command="{Binding FileLoadCommand,
                RelativeSource={RelativeSource AncestorType=videoManager:ScriptChannelLoaderCard} }"
                        CommandParameter="{Binding ChannelIndex,RelativeSource={RelativeSource AncestorType=videoManager:ScriptChannelLoaderCard}}"
                        VerticalAlignment="Center"
                        Content=""
                        IconText="&#xE232;">
                    </IconButton>
                    <IconButton
                        Command="{Binding ClearFileCommand,
                RelativeSource={RelativeSource AncestorType=videoManager:ScriptChannelLoaderCard} }"
                        CommandParameter="{Binding ChannelIndex,RelativeSource={RelativeSource AncestorType=videoManager:ScriptChannelLoaderCard}}"
                        VerticalAlignment="Center"
                        Content=""
                        IconText="&#xE4A6;">
                    </IconButton>
                </StackPanel>

            </Grid>

        </Border>
    </Grid>
</UserControl>