<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="using:HMV_Player.Controls.VideoManagement">
    <Design.PreviewWith>
        <controls:VidCard 
            Title="Sample Video Title That Might Be Long"
            ThumbnailUrl="avares://HMV Player/Assets/Images/Placeholders/bear.jpg"
            Width="320"
            Height="240" />
    </Design.PreviewWith>
    
    <Style Selector="controls|VidCard">
        <!-- Remove default button styling -->
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Padding" Value="0" />
        <Setter Property="Cursor" Value="Hand" />
        
        <Setter Property="Template">
            <ControlTemplate>
                <Border CornerRadius="8"
                        Background="#2A2A2A"
                        Padding="12"
                        BorderBrush="#3A3A3A"
                        BorderThickness="1"
                        Name="PART_Border">
                    <StackPanel Orientation="Vertical" Spacing="8">
                        <Border CornerRadius="6"
                                Background="#1A1A1A"
                                ClipToBounds="True"
                                Height="180"
                                Width="296">
                            <Image Source="{TemplateBinding ThumbnailUrl}"
                                   Stretch="UniformToFill" />
                        </Border>
                        <TextBlock Text="{TemplateBinding Title}"
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   TextWrapping="Wrap"
                                   MaxLines="2"
                                   Foreground="White" />
                    </StackPanel>
                </Border>
            </ControlTemplate>
        </Setter>
    </Style>
    
    <!-- Hover effect -->
    <Style Selector="controls|VidCard:pointerover /template/ Border#PART_Border">
        <Setter Property="Background" Value="#3A3A3A" />
        <Setter Property="BorderBrush" Value="#4A4A4A" />
    </Style>
    
    <!-- Pressed effect -->
    <Style Selector="controls|VidCard:pressed /template/ Border#PART_Border">
        <Setter Property="Background" Value="Gray" />
    </Style>
</Styles>